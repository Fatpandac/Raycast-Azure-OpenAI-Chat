{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "openai-chat",
  "title": "OpenAI Chat",
  "description": "A Universal OpenAI Client",
  "icon": "command-icon.png",
  "author": "Fatpandac",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Ask OpenAI",
      "description": "Chat with AI",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "openAiType",
      "description": "Choose which AI service you are using",
      "type": "dropdown",
      "required": true,
      "title": "OpenAI Type",
      "data": [
        {
          "title": "OpenAI",
          "value": "OpenAI"
        },
        {
          "title": "Raycast AI",
          "value": "Raycast AI"
        },
        {
          "title": "Azure OpenAI",
          "value": "Azure OpenAI"
        }
      ]
    },
    {
      "name": "endpoint",
      "title": "Endpoint",
      "type": "textfield",
      "required": false,
      "default": "https://api.openai.com",
      "description": "EndPoint of your service"
    },
    {
      "name": "apiKey",
      "title": "API Key",
      "type": "password",
      "required": false,
      "description": "API key of your service"
    },
    {
      "name": "model",
      "title": "Modle",
      "type": "textfield",
      "required": false,
      "description": "Model for your service"
    }
  ],
  "dependencies": {
    "@azure/openai": "^1.0.0-beta.2",
    "@raycast/api": "^1.53.2",
    "dayjs": "^1.11.8"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
